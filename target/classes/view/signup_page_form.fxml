            <Font name="Arial" size="12.0" />
         </font>
      </Label>
      <Label layoutX="466.0" layoutY="105.0" text="Create a new account for a cashier" />
      <TextField fx:id="signTxt1" layoutX="467.0" layoutY="134.0" opacity="0.7" prefHeight="25.0" prefWidth="179.0" promptText="UserName" styleClass="loginTxt1" stylesheets="@../styles/style.css" />
      <TextField fx:id="signTxt4" layoutX="467.0" layoutY="233.0" opacity="0.7" prefHeight="25.0" prefWidth="179.0" promptText="Email" styleClass="loginTxt2" stylesheets="@../styles/style.css" />
      <TextField fx:id="signTxt5" layoutX="467.0" layoutY="266.0" opacity="0.7" prefHeight="25.0" prefWidth="179.0" promptText="Job Title" styleClass="loginTxt2" stylesheets="@../styles/style.css" />
      <PasswordField fx:id="signTxt2" layoutX="466.0" layoutY="166.0" onKeyTyped="#signTxt2OnKeyTyped" opacity="0.7" prefHeight="25.0" prefWidth="182.0" promptText="Enter New Password" />
      <PasswordField fx:id="signTxt3" layoutX="466.0" layoutY="200.0" opacity="0.7" prefHeight="25.0" prefWidth="182.0" promptText="Comfirm Password" />
      <Label fx:id="passlabel" layoutX="59.0" layoutY="97.0" text="Label" visible="false" />
   </children>
</AnchorPane>
