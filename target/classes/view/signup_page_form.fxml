<AnchorPane prefHeight="401.0" prefWidth="748.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.project_rio.controller.SignupPageFormController">
   <children>
      <ImageView fitHeight="428.0" fitWidth="806.0" layoutX="-1.0" layoutY="-2.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/login.png" />
         </image>
      </ImageView>
      <Rectangle fx:id="loginRec" arcHeight="20.0" arcWidth="20.0" fill="#d9b1cb" height="340.0" layoutX="405.0" layoutY="22.0" opacity="0.79" stroke="BLACK" strokeType="INSIDE" width="304.0">
         <effect>
            <InnerShadow />
         </effect>
      </Rectangle>
      <ImageView fitHeight="112.0" fitWidth="137.0" layoutX="395.0" layoutY="20.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/logo.png" />
         </image>
      </ImageView>
      <Label layoutX="490.0" layoutY="49.0" text="Sign Up">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
      </Label>
      <Label layoutX="514.0" layoutY="264.0" />
      <Button fx:id="createAnAccBtn" layoutX="467.0" layoutY="302.0" mnemonicParsing="false" onAction="#clickOnActionCreateAccount" text="Create Account">
         <effect>
            <InnerShadow height="9.32" radius="4.2625" width="9.73" />
         </effect>
      </Button>
      <Hyperlink fx:id="loginLbl" layoutX="610.0" layoutY="328.0" onAction="#OnActionLogin" text="Login" />
      <Label layoutX="467.0" layoutY="333.0" text="Already have an account? " textFill="#161515">
